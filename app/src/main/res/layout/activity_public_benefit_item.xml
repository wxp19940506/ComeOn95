<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_public_benefit_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.comeon95.PublicBenefitItemActivity">
    <RelativeLayout
        android:id="@+id/aboutlb"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/homeback_color"
        >
        <ImageView
            android:id="@+id/about_return"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/return_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="80dp"
            android:layout_toRightOf="@id/about_return"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="@string/youxuan_laibai"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp">
            <ImageView
                android:id="@+id/xiaoxi3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/message_icon"/>
            <ImageView
                android:id="@+id/share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="12dp"
                android:src="@mipmap/share2"/>
        </LinearLayout>

    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/aboutlb">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@color/background"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="@string/fa"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:drawableRight="@mipmap/icon_turn"
                        android:text="@string/person"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@color/background"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/fabu"
                    android:textColor="@color/text_red"
                    android:paddingLeft="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/background"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:text="@string/jieshao"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:text="@string/back"/>
                <TextView
                    android:id="@+id/jieshao1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textScaleX="1"
                    android:paddingLeft="10dp"
                    />
                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />
                <LinearLayout
                    android:id="@+id/somes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/have_problem"
                        android:textScaleX="1"
                        />
                    <TextView
                        android:id="@+id/problem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textScaleX="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/need"/>
                    <TextView
                        android:id="@+id/need"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textScaleX="1"
                        android:text="@string/addre"/>
                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sound"/>
                    <TextView
                        android:id="@+id/sound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textScaleX="1"
                        />

                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/less"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="@string/less"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:paddingTop="15dp"
                android:layout_below="@id/ll1"
                android:background="@color/homeback_color"
                android:drawableBottom="@mipmap/return_icon"/>
            <TextView
                android:id="@+id/more"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="@string/mores"
                android:gravity="center_horizontal"
                android:background="@color/homeback_color"
                android:layout_alignParentBottom="true"
                android:paddingTop="15dp"
                android:layout_below="@id/ll1"
                android:drawableBottom="@mipmap/return_icon"/>

        </RelativeLayout>

    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/text_red"
        android:padding="5dp"
        android:textColor="@color/homeback_color"
        android:layout_alignParentBottom="true"
        android:text="@string/juan"/>

</RelativeLayout>
