<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/homeback_color"
    android:paddingBottom="15dp">
    <RelativeLayout
        android:id="@+id/goodsome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/goodicon"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/goodprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/goodicon"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/cankaoprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/goodprice"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goodprice"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/goodicon"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/enable_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/goodicon"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textColorhui"
        android:layout_below="@id/goodsome"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
    <RelativeLayout
        android:id="@+id/color_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yanse"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"/>
            <GridView
                android:id="@+id/color_type"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:numColumns="3"
                android:scrollbars="none"
                android:horizontalSpacing="5dp"
                android:layout_below="@+id/color">

            </GridView>

    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textColorhui"
        android:layout_below="@id/color_layout"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/color_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:text="@string/zulin_count"/>
        <LinearLayout
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/jian"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:text="â€”"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:background="@drawable/count_background"
                android:textColor="@color/textColor"/>
            <TextView
                android:id="@+id/count1"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:text="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:background="@drawable/count_background"
                android:textColor="@color/textColor"/>
            <TextView
                android:id="@+id/add"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:text="+"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:background="@drawable/count_background"
                android:textColor="@color/textColor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/count"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/textColor1"
                android:text="@string/heji"/>
            <TextView
                android:id="@+id/add_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/textColor3"
                android:text="@string/count_orices"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/dismiss"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/close1"/>


</RelativeLayout>